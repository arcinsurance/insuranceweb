{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "vite-env.d.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "backend/**"
  ]
}
